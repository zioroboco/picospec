{
  "name": "picospec",
  "version": "0.1.0",
  "description": "A test framework for ants",
  "author": "Louis Quinnell <_@ziorobo.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zioroboco/picospec.git"
  },
  "files": [
    "dist/",
    "!**/*.map",
    "!**/*.spec.*"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "prettier": {
    "arrowParens": "avoid",
    "semi": false
  },
  "scripts": {
    "failing": "tsc --build && node --no-warnings --experimental-specifier-resolution=node ./example/failing.spec.js",
    "passing": "tsc --build && node --no-warnings --experimental-specifier-resolution=node ./example/passing.spec.js",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "jest",
    "release": "tsc && changeset publish",
    "version": "changeset version",
    "lint": "yarn lint:prettier --write && yarn log:done prettier && yarn lint:eslint --fix && yarn log:done eslint",
    "lint-ci": "yarn lint:prettier --check && yarn log:done prettier && yarn lint:eslint --max-warnings=0 && yarn log:done eslint",
    "lint:eslint": "eslint . --ext .ts",
    "lint:prettier": "prettier '**/*[!.d].{json,yaml,yml}' --loglevel=warn",
    "log:done": "echo 'âœ” '"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tsm": "^2.2.1",
    "typescript": "^4.5.4"
  },
  "packageManager": "yarn@3.1.1"
}
